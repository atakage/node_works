<!DOCTYPE html>
<html>

<head>

    <%- include ('../include-head') %>
    <script>
    

        $(function(){


            $('#b_text').summernote({


                lang:"ko-KR",
                width: "100%",
                height:"300px"

            })


        })
    

    </script>

</head>

<body>


    <%- include ('../include-header') %>

    <section class="w3-container-fluid">


        <form method="post">

            <div class="w3-container">

                <label class="w3-label w3-text-blue" for="b_writer">작성자</label>
                <input name="b_writer" id="b_writer" class="w3-input w3-border" value="<%- bbsVO.b_writer %>">

                <label class="w3-label w3-text-blue" for="b_date">작성일자</label>
                <input name="b_date" id="b_date" class="w3-input w3-border" value="<%- bbsVO.b_date %>">

                <label class="w3-label w3-text-blue" for="b_time">작성시각</label>
                <input name="b_time" id="b_time" class="w3-input w3-border" value="<%- bbsVO.b_time %>">

                <label class="w3-label w3-text-blue" for="b_subject">제목</label>
                <input name="b_subject" id="b_subject" class="w3-input w3-border" value="<%- bbsVO.b_subject %>">

                <div class="w3-container">
                    <label class="w3-label w3-text-blue" for="b_text">내용</label>
                    <textarea name="b_text" id="b_text" class="w3-input w3-border"><%- bbsVO.b_text %></textarea>
                </div>

                <div class="w3-container">
                    <button class="w3-button w3-blue">저장</button>
                </div>
            </div>


        </form>


    </section>

</body>

</html>